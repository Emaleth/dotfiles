set number 				" line numbers
syntax on 				" highlight syntax
set mouse=a				" mouse support
let base16colorspace=256		" 256 colorspace 
colorscheme base16-default-dark		" colorscheme
set clipboard=unnamedplus		" clipboard vim <-> other
set writebackup				" 
set nobackup				" 
set noswapfile				" no annoying swap file
set scrolloff=10			" cursor bottom limit
set undodir=~/.vim/backup		" undofile dir
set undofile				" alows undo even after writing
set undoreload=10000			" 
